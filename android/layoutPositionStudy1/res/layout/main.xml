<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#000000"
  android:padding="30dp"
  android:keepScreenOn="true">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <TextView
      android:id="@+id/start_intro"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textColor="#FFFFFF"
      android:textSize="40sp"
      android:textStyle="bold"
      android:text="@string/start_description"
    />

    <TextView
      android:id="@+id/start_intro_subtitle"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textColor="#FFFFFF"
      android:textSize="30sp"
      android:text="@string/start_description_subtitle"
    />
  </LinearLayout>

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
      android:id="@+id/start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:padding="10dp"
      android:background="@drawable/button_background"
      android:textColor="#FFFFFF"
      android:textSize="15dp"
      android:textStyle="bold"
      android:onClick="goToAlbuns"
      android:text="@string/click_to_start"
    />

    <Button
      android:id="@+id/credits"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:textColor="#808080"
      android:textSize="15dp"
      android:background="@null"
      android:onClick="goToCredits"
      android:text="@string/credits"
    />
  </RelativeLayout>

</LinearLayout>
